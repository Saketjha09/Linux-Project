# Example environment variables for the voting app
# Copy this to .env and adjust values for your environment
# WARNING: Never commit .env file with real secrets to version control!

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DB_NAME=postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Voting App Configuration
OPTION_A=Cats
OPTION_B=Dogs
VOTE_PORT=80

# Results App Configuration
RESULT_PORT=80

# Worker Configuration
WORKER_LOG_LEVEL=info

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Node Configuration
NODE_ENV=development
